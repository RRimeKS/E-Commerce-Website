<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>
<head>
    <style>
        .card-wrapper {
            display: grid;

            grid-template-columns: repeat(4,1fr)

        }
    </style>
</head>
<body>
<%- include('../partials/navbar') %>,

<div class="container">
    <div class="row">
        <h1 class="form-title mb-5">Ürünler</h1>
        
        <div class="mb-3">
            <div class="col-md-12">
                <div class="card-wrapper">
                    <% products.forEach(product => { %>
                        <div class="card" style="width: 18rem;">
                            <img src="../../uploads/<%= product.imageCover %>" class="card-img-top">
                            <div class="card-body text-center">
                              <p class="card-text"><%= product.title %></p>
                              <p><%= product.price %>TL</p>
                              <button></button>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>
        </div>
    </div>
</div>
    
</body>
<%- include('../partials/script') %>

</html>