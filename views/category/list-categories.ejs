<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head') %>
</head>

<body>
    <div class="container">
        <%- include('../partials/navbar') %>
            <div class="row mt-5">
                <h1>Kategoriler</h1>
                <div class="col">
                    <table class="table table-bordered text-center">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Kategori adı</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <h5 style="color:white; padding: 3px;" class="text-center bg-primary">Toplam kategori sayısı:
                            <%= categoryCount %>
                        </h5>
                        <tbody>
                            <% categories.forEach(category=> { %>
                                <tr>
                                    <td>
                                        <%= category._id %>
                                    </td>

                                    <td>
                                        <%= category.name %>
                                    </td>
                                    <td>
                                        <a href="/delete/category/<%= category._id %>" class="btn btn-danger">Sil</a>
                                        <a href="/edit/category/<%= category._id %>"
                                            class="btn btn-primary">Güncelle</a>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
    </div>

    <%- include('../partials/script') %>
</body>

</html>